<?xml version="1.0" encoding="utf-8"?>
<com.catvinhquang.exchangerate.view.GoldPriceChartView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_global"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_gray"
            android:padding="8dp"
            android:src="@drawable/ic_globe" />

        <ImageView
            android:id="@+id/iv_local"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_yellow"
            android:padding="8dp"
            android:src="@drawable/ic_vietnam_flag" />

    </LinearLayout>

</com.catvinhquang.exchangerate.view.GoldPriceChartView>