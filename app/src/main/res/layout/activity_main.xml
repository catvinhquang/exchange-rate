<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    android:background="#fff"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_share" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff176"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/gold"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#81d4fa"
            android:padding="8dp"
            android:text="@string/usd"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a5d6a7"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/buy"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_global_buying_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9c4"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="x,xxx" />

        <TextView
            android:id="@+id/tv_local_buying_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9c4"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="xx,xxx,xxx" />

        <TextView
            android:id="@+id/tv_buying_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e1f5fe"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="xx,xxx" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a5d6a7"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/sell"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_global_selling_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9c4"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="x,xxx" />

        <TextView
            android:id="@+id/tv_local_selling_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9c4"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="xx,xxx,xxx" />

        <TextView
            android:id="@+id/tv_selling_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e1f5fe"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="xx,xxx" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a5d6a7"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/unit"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9c4"
            android:padding="8dp"
            android:text="@string/usd_per_oz"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9c4"
            android:padding="8dp"
            android:text="@string/vnd_per_tael_of_gold"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e1f5fe"
            android:padding="8dp"
            android:text="@string/vnd_per_usd"
            android:textColor="#000"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>